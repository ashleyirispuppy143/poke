<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>My Poke | Subscriptions</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/css/yt-ukraine.svg?v=6" rel="icon">
    <meta name="librejs-license" content="GPL-3.0-or-later">
  <style>
    :root {
      --bg-body: #121212;
      --bg-sidebar: #181818;
      --bg-element: #252525;
      --bg-hover: #333333;
      --border: #333333;
      --text-main: #e0e0e0;
      --text-muted: #a0a0a0;
      --accent: #3ea6ff; 
      --danger: #ff4e45;
    }

    * { box-sizing: border-box; }

    body {
      margin: 0;
      padding: 0;
      height: 100vh;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
      background-color: var(--bg-body);
      color: var(--text-main);
      display: flex;
      overflow: hidden;
    }

    a { text-decoration: none; color: inherit; }
    button, input { font-family: inherit; }

     aside {
      width: 320px;
      background-color: var(--bg-sidebar);
      border-right: 1px solid var(--border);
      display: flex;
      flex-direction: column;
      flex-shrink: 0;
    }

    header {
      padding: 16px;
      border-bottom: 1px solid var(--border);
    }

    h1 {
      margin: 0;
      font-size: 1.2rem;
      font-weight: 700;
      color: var(--text-main);
      display: flex;
      align-items: center;
      gap: 8px;
    }

    /* Controls (Search & Sort) */
    .controls {
      padding: 10px;
      border-bottom: 1px solid var(--border);
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .search-wrapper {
      display: flex;
      gap: 5px;
    }

    input[type="text"] {
      flex: 1;
      background: var(--bg-body);
      border: 1px solid var(--border);
      padding: 8px 10px;
      border-radius: 4px;
      color: var(--text-main);
      font-size: 14px;
    }
    input[type="text"]:focus {
      outline: 2px solid var(--accent);
      border-color: transparent;
    }

    .btn {
      padding: 6px 12px;
      background: var(--bg-element);
      border: 1px solid var(--border);
      color: var(--text-main);
      cursor: pointer;
      border-radius: 4px;
      font-size: 13px;
    }
    .btn:hover { background: var(--bg-hover); }
    .btn.active { background: var(--accent); color: #000; font-weight: bold; border-color: var(--accent); }

    .sort-buttons {
      display: flex;
      gap: 5px;
    }
    .sort-buttons button { flex: 1; }

    /* Channel List */
    .channel-list {
      flex: 1;
      overflow-y: auto;
    }

    .channel {
      display: flex;
      align-items: center;
      padding: 10px 16px;
      border-bottom: 1px solid var(--border);
      cursor: pointer;
      transition: background 0.15s;
    }

    .channel:hover { background-color: var(--bg-hover); }
    .channel.selected {
      background-color: var(--bg-element);
      border-left: 4px solid var(--accent);
      padding-left: 12px; /* compensate for border */
    }

    .channel img {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      margin-right: 12px;
      background: var(--bg-element);
    }

    .channel-info {
      flex: 1;
      overflow: hidden;
    }

    .channel-name {
      font-size: 14px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .unsub-btn {
      font-size: 11px;
      color: var(--danger);
      border: 1px solid var(--border);
      padding: 4px 8px;
      border-radius: 4px;
      margin-left: 10px;
      opacity: 0.6;
      transition: 0.2s;
    }
    .unsub-btn:hover {
      opacity: 1;
      background: rgba(255, 78, 69, 0.1);
      border-color: var(--danger);
    }

    .sidebar-footer {
      padding: 12px;
      border-top: 1px solid var(--border);
      font-size: 12px;
      color: var(--text-muted);
      display: flex;
      justify-content: space-between;
      background: var(--bg-body);
    }

    /* --- Main Content --- */
    main {
      flex: 1;
      display: flex;
      flex-direction: column;
      background-color: var(--bg-body);
      position: relative;
    }

    .toolbar {
      height: 50px;
      border-bottom: 1px solid var(--border);
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
      background: var(--bg-sidebar);
    }

    .current-channel { font-weight: 600; font-size: 14px; }

    .viewer-container {
      flex: 1;
      position: relative;
      background: #000;
    }

    iframe {
      width: 100%;
      height: 100%;
      border: none;
      display: none; /* Hidden by default */
    }
    iframe.active { display: block; }

    .empty-state {
      position: absolute;
      top: 50%; left: 50%;
      transform: translate(-50%, -50%);
      color: var(--text-muted);
      text-align: center;
    }

    .close-btn {
      display: none; /* Only show on mobile if needed, or controlled via JS */
      background: none; border: none; font-size: 20px; color: var(--text-muted); cursor: pointer;
    }
    .close-btn:hover { color: var(--text-main); }

    /* Mobile Responsive */
    @media(max-width: 768px) {
      body { flex-direction: column; }
      aside { width: 100%; height: 40vh; }
      main { height: 60vh; }
    }

    /* --- No JS Alert (Floating Toast) --- */
    noscript {
      position: fixed;
      bottom: 24px;
      right: 24px;
      z-index: 9999;
      width: 300px;

      background-color: var(--bg-element);
      border: 1px solid var(--border);
      border-left: 4px solid var(--danger);
      border-radius: 8px;

      padding: 16px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.6);

      color: var(--text-main);
      font-size: 13px;
      line-height: 1.5;

      /* Animation for flair */
      animation: slideIn 0.5s ease-out;
    }

    noscript strong {
      display: block;
      color: var(--danger);
      margin-bottom: 4px;
      font-size: 14px;
    }

    @keyframes slideIn {
      from { transform: translateY(20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
  </style>
</head>
<body>

  <noscript>
    <strong>JavaScript Disabled</strong>
    Search and sorting features are unavailable. You can still click channel names to open them.
  </noscript>

  <aside>
    <header>
      <h1>My Poke</h1>
    </header>

    <div class="controls">
      <div class="search-wrapper">
        <input type="text" id="searchInput" placeholder="Search ur channels..." autocomplete="off">
        <button class="btn" id="clearSearch" title="Clear">X</button>
      </div>
      <div class="sort-buttons">
        <button class="btn active" data-sort="asc">A-Z</button>
        <button class="btn" data-sort="desc">Z-A</button>
      </div>
    </div>

    <%
      // Safely grab subs from EJS context
      const subKeys = (userSubs && Object.keys(userSubs)) || [];
      const subs = subKeys.map(id => ({
        id,
        name: userSubs[id]?.channelName || "Unknown Channel",
        avatar: userSubs[id]?.avatar || ""
      }));
      // Initial server-side sort
      subs.sort((a,b) => a.name.localeCompare(b.name, 'en', {sensitivity:'base'}));
    %>

    <div class="channel-list" id="channelList">
      <% subs.forEach(c => { %>
        <div class="channel" data-id="<%= c.id %>" data-name="<%= c.name.toLowerCase() %>">
          <img src="<%= c.avatar %>" alt="" loading="lazy">
          <div class="channel-info">
            <div class="channel-name"><%= c.name %></div>
          </div>
          <a class="unsub-btn"
             href="/api/remove-channel-sub?ID=<%= encodeURIComponent(userid) %>&channelID=<%= c.id %>"
             onclick="event.stopPropagation();"
             title="Unsubscribe">
            Unsub
          </a>
        </div>
      <% }) %>
    </div>

    <div class="sidebar-footer">
      <span>User: <%= userid %></span>
      <a href="/privacy" style="text-decoration: underline;">Privacy</a>
    </div>
  </aside>

  <main>
    <div class="toolbar">
      <span class="current-channel" id="toolbarTitle">Select a channel</span>
      <div>
        <button class="btn close-btn" id="closeViewer" title="Close View">âœ–</button>
        <a href="/api/get-channel-subs?ID=<%= encodeURIComponent(userid) %>" target="_blank" class="btn">JSON</a>
      </div>
    </div>

    <div class="viewer-container">
      <div class="empty-state" id="emptyState">
        <p>Select a channel from the list to view feed.</p>
      </div>
      <iframe id="mainFrame" sandbox="allow-scripts allow-same-origin allow-popups"></iframe>
    </div>
  </main>

<script>
document.addEventListener("DOMContentLoaded", () => {
  // DOM Elements
  const searchInput = document.getElementById('searchInput');
  const clearBtn = document.getElementById('clearSearch');
  const sortBtns = document.querySelectorAll('.sort-buttons .btn');
  const channelList = document.getElementById('channelList');
  const channels = document.querySelectorAll('.channel');
  const iframe = document.getElementById('mainFrame');
  const emptyState = document.getElementById('emptyState');
  const toolbarTitle = document.getElementById('toolbarTitle');
  const closeViewer = document.getElementById('closeViewer');

  // --- 1. Search Functionality ---
  function filterChannels() {
    const term = searchInput.value.toLowerCase();
    channels.forEach(ch => {
      const name = ch.dataset.name;
      ch.style.display = name.includes(term) ? 'flex' : 'none';
    });
  }

  searchInput.addEventListener('input', filterChannels);

  clearBtn.addEventListener('click', () => {
    searchInput.value = '';
    filterChannels();
    searchInput.focus();
  });

  // --- 2. Sort Functionality ---
  sortBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Toggle UI
      sortBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Sort Nodes
      const dir = btn.dataset.sort;
      const itemsArray = Array.from(channels);

      itemsArray.sort((a, b) => {
        const na = a.dataset.name;
        const nb = b.dataset.name;
        return dir === 'asc' ? na.localeCompare(nb) : nb.localeCompare(na);
      });

      // Re-append to DOM
      itemsArray.forEach(node => channelList.appendChild(node));
    });
  });

  // --- 3. Selection & Iframe ---
  channels.forEach(ch => {
    ch.addEventListener('click', () => {
      // UI Updates
      channels.forEach(c => c.classList.remove('selected'));
      ch.classList.add('selected');

      const id = ch.dataset.id;
      const realName = ch.querySelector('.channel-name').textContent;

      // Update Toolbar
      toolbarTitle.textContent = realName;
      closeViewer.style.display = 'inline-block';

      // Update Iframe
      emptyState.style.display = 'none';
      iframe.src = `/channel?id=${encodeURIComponent(id)}&embedchannelsubsfeed=true`;
      iframe.classList.add('active');
    });
  });

  // --- 4. Close/Reset View ---
  closeViewer.addEventListener('click', () => {
    iframe.src = '';
    iframe.classList.remove('active');
    emptyState.style.display = 'block';
    toolbarTitle.textContent = 'Select a channel';
    closeViewer.style.display = 'none';
    channels.forEach(c => c.classList.remove('selected'));
  });

  // Prevent link clicks inside iframe from navigating the iframe itself
  iframe.addEventListener("load", () => {
    try {
      const doc = iframe.contentDocument || iframe.contentWindow.document;
      doc.querySelectorAll("a").forEach(a => a.setAttribute("target", "_blank"));
    } catch(e) {
      // Ignore cross-origin errors
    }
  });

});
</script>
</body>
</html>
