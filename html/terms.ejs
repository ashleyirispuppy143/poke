  <style>
    /* Custom Fonts */
    @font-face {
      src: url("/static/robotoflex.ttf");
      font-family: "PokeTube Flex";
      font-style: normal;
      font-stretch: 1% 800%;
      font-display: swap;
    }

    :root { 
      --bg: #0b0b0b; 
      --surface: #141414; 
      --surface-border: #2a2a2a;
      --fg: #f3f3f3; 
      --muted: #a1a1a1; 
      --accent: #ffabcc; 
      --accent-hover: #ff8cb6;
    }

    * { box-sizing: border-box; }

    html, body { 
      margin: 0; padding: 0; height: 100%; 
      background: var(--bg); color: var(--fg); 
      font: 15px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, "Noto Sans", sans-serif; 
      overflow-x: hidden;
    }

    a { color: var(--accent); text-decoration: none; transition: color 0.2s; font-weight: 500; }
    a:hover { color: var(--accent-hover); text-decoration: underline; }

    /* Header */
    header.site {
      position: sticky; top: 0; z-index: 50;
      background: rgba(11, 11, 11, 0.8);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid rgba(255, 171, 204, 0.1);
    }
    .nav-row { display: flex; align-items: center; justify-content: space-between; gap: 12px; padding: 12px 24px; max-width: 1200px; margin: 0 auto; }
    .brand { display: inline-flex; align-items: center; gap: 10px; color: #fff; font-weight: 800; text-decoration: none; }
    .brand img { height: 32px; filter: drop-shadow(0 2px 8px rgba(0,0,0,0.5)); }

    /* Hero Branding Area */
    .hero-branding {
      position: relative;
      background: linear-gradient(135deg, #a83258 0%, #ffabbc 80%);
      padding: 100px 20px 140px;
      text-align: center;
      overflow: hidden;
      border-bottom: 1px solid rgba(255, 171, 204, 0.2);
    }
 
     .hype-container {
      position: absolute;
      top: 50%; left: 50%;
      transform: translate(-50%, -50%) rotate(-8deg);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 35px;
      z-index: 0;
      pointer-events: none;
      width: 150%;
      height: 90%; /* Leaves breathing room at top and bottom */
    }

    .hype-text {
      font-size: clamp(35px, 5vw, 75px);
      font-family: "PokeTube Flex", sans-serif;
      font-weight: 1000;
      color: #fff;
      white-space: nowrap;
      letter-spacing: 3px;
      text-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
    
    .hype-text:nth-child(odd) { opacity: 0.12; margin-left: -5%; }
    .hype-text:nth-child(even) { opacity: 0.08; margin-left: 5%; }

    /* Mascot */
    .mascot {
      position: absolute;
      bottom: 0; 
      right: 5%;
      max-height: 280px;
      object-fit: contain;
      z-index: 2;
      filter: drop-shadow(0 -10px 20px rgba(0,0,0,0.4));
      pointer-events: none;
    }

    /* Hero Content without background */
    .hero-content {
      position: relative;
      z-index: 3;
      max-width: 800px;
      margin: 0 auto;
      /* Background removed as requested */
      background: transparent;
      border: none;
      box-shadow: none;
      padding: 0;
    }

    .doc-title {
      font-family: "PokeTube Flex", sans-serif;
      font-size: clamp(45px, 8vw, 90px);
      font-weight: 1000;
      font-stretch: extra-expanded;
      color: #fff;
      margin: 0 0 16px 0;
      line-height: 1.05;
      letter-spacing: -0.02em;
      text-shadow: 0 8px 25px rgba(0,0,0,0.5);
    }

    .doc-lede { 
      font-size: 1.2rem; 
      color: #fff; 
      text-shadow: 0 4px 12px rgba(0,0,0,0.6); 
      margin: 0 auto; 
      max-width: 600px; 
      font-weight: 500;
    }

    /* Main Container */
    .wrap {
      max-width: 1200px;
      margin: -60px auto 60px;
      padding: 0 20px;
      position: relative;
      z-index: 10;
    }

    /* Featured Cards Row */
    .featured-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 24px;
      margin-bottom: 40px;
    }

    .featured-card {
      background: var(--surface);
      border: 1px solid var(--surface-border);
      border-radius: 20px;
      padding: 32px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.6);
      transition: transform 0.2s ease, border-color 0.2s ease;
      display: flex;
      flex-direction: column;
    }
    
    .featured-card:hover {
      transform: translateY(-5px);
      border-color: rgba(255, 171, 204, 0.4);
    }

    .featured-card h2 {
      font-family: "PokeTube Flex", sans-serif;
      font-size: 1.8rem;
      font-stretch: expanded;
      color: #fff;
      margin: 0 0 8px 0;
    }

    .update-badge {
      display: inline-block;
      background: linear-gradient(135deg, #2b1e72, #4a35cc);
      color: #fff;
      padding: 6px 12px;
      border-radius: 8px;
      font-size: 0.85rem;
      font-weight: 800;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      margin-bottom: 16px;
      box-shadow: 0 4px 10px rgba(74, 53, 204, 0.3);
      width: max-content;
    }

    .date { color: var(--muted); font-size: 0.9rem; margin-bottom: 16px; font-weight: 500; }
    .featured-card p { color: #d1d1d1; margin: 0 0 24px 0; flex-grow: 1; }
    
    .btn-link {
      display: inline-block;
      background: rgba(255, 171, 204, 0.1);
      color: var(--accent);
      border: 1px solid rgba(255, 171, 204, 0.3);
      padding: 10px 20px;
      border-radius: 10px;
      font-weight: bold;
      text-align: center;
      transition: all 0.2s;
    }
    .btn-link:hover { background: var(--accent); color: #000; text-decoration: none; }

     .section-title {
      font-family: "PokeTube Flex", sans-serif;
      font-size: 2.2rem;
      font-stretch: expanded;
      color: #fff;
      text-align: center;
      margin: 60px 0 30px;
      padding-bottom: 16px;
      border-bottom: 1px solid var(--surface-border);
    }

     .policies-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
      gap: 24px;
      align-items: start; /* Prevents cards from stretching vertically together */
    }

    details.policy-card {
      background: #111;
      border: 1px solid #222;
      border-radius: 16px;
      padding: 24px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.5);
      transition: background 0.3s, border-color 0.3s;
    }

    details.policy-card:hover { background: #161616; border-color: #333; }
    details.policy-card[open] { background: var(--surface); border-color: rgba(255, 171, 204, 0.2); }

    details.policy-card summary {
      font-family: "PokeTube Flex", sans-serif;
      font-size: 1.3rem;
      font-stretch: expanded;
      color: var(--accent);
      cursor: pointer;
      list-style: none; /* Hide default arrow */
      display: flex;
      justify-content: space-between;
      align-items: center;
      outline: none;
    }

     details.policy-card summary::after {
      content: "↓";
      font-family: system-ui, sans-serif;
      font-size: 1.2rem;
      transition: transform 0.3s ease;
      color: var(--muted);
    }
    details.policy-card[open] summary::after { transform: rotate(180deg); color: var(--accent); }

    details.policy-card .content-inner {
      padding-top: 16px;
      margin-top: 16px;
      border-top: 1px solid #2a2a2a;
      animation: slideDown 0.3s ease-out;
    }

    @keyframes slideDown {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    details.policy-card p { margin: 12px 0; color: #cfcfcf; }
    details.policy-card ul { margin: 12px 0 12px 24px; color: #cfcfcf; }
    details.policy-card li { margin-bottom: 6px; }
    
    .legal-block {
      background: #080808;
      border: 1px solid #1f1f1f;
      padding: 16px;
      border-radius: 12px;
      margin-top: 16px;
    }
    .legal-block p { color: #888 !important; font-size: 0.85rem; margin: 4px 0 !important; }
    .legal-block strong { color: #aaa; }

    /* Nested Details fix */
    details.policy-card details { background: #0a0a0a; border: 1px solid #222; border-radius: 12px; padding: 12px 16px; margin: 16px 0; }
    details.policy-card details summary { font-size: 1.1rem; color: #fff; font-family: system-ui, sans-serif; font-stretch: normal; }
    details.policy-card details summary::after { content: "+"; }
    details.policy-card details[open] summary::after { content: "−"; }

    .outro-text {
      text-align: center;
      margin: 60px auto 0;
      max-width: 800px;
      color: var(--muted);
      font-size: 1.05rem;
      padding: 24px;
      background: rgba(255, 171, 204, 0.03);
      border-radius: 16px;
      border: 1px solid rgba(255, 171, 204, 0.1);
    }

    footer.site { text-align: center; color: #666; margin: 40px 0 60px; font-weight: 500; }
    
    @media (max-width: 800px) {
      .hero-branding { padding: 80px 20px 100px; }
      .mascot { max-height: 180px; right: -10px; }
      .doc-title { font-size: clamp(38px, 10vw, 60px); }
      .wrap { margin-top: -30px; }
      .featured-card { padding: 24px; }
    }
  </style>
