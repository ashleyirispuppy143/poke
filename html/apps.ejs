<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <title>Poke â€” Apps</title>
  <meta name="description" content="Poke is free software: a privacy-first suite with a player, translator, maps, notes, calendar, and more." />
  <meta name="theme-color" content="#0b0e14" />
  
  <link href="https://p.poketube.fun/https://site-assets.fontawesome.com/releases/v6.1.1/css/all.css" rel="stylesheet" />
  
  <style>
    :root {
      /* Palette */
      --bg-deep: #050608;
      --bg-card: #11141d;
      --bg-card-hover: #1a1f2b;
      
      --ink: #f1f5f9;
      --muted: #94a3b8;
      
      --accent: #0ea5e9;       /* Sky Blue */
      --accent-glow: rgba(14, 165, 233, 0.4);
      --border: rgba(255, 255, 255, 0.1);
      --border-hover: rgba(255, 255, 255, 0.25);
      
      /* Layout */
      --maxw: 1080px;
      --radius: 16px;
      --transition: 0.2s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    * { box-sizing: border-box; }
    
    html, body { height: 100%; }
    
    body {
      margin: 0;
      color: var(--ink);
      font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      background: var(--bg-deep);
      overflow-x: hidden;
    }

    /* === Background Video === */
    .bg {
      position: fixed; inset: 0; z-index: -2;
      background: var(--bg-deep);
    }
    .bg video {
      position: absolute; inset: 0; width: 100%; height: 100%;
      object-fit: cover;
      opacity: 0.4; /* Dimmed for readability */
      filter: saturate(110%);
    }
    .bg::after {
      /* Gradient overlay to fade video into bottom/edges */
      content: ""; position: absolute; inset: 0; z-index: 1;
      background: radial-gradient(circle at 50% 30%, transparent 0%, var(--bg-deep) 90%);
    }

    /* === Layout Wrapper === */
    .page {
      min-height: 100dvh;
      display: flex;
      flex-direction: column;
      padding: 20px;
      max-width: var(--maxw);
      margin: 0 auto;
    }

    /* === Hero Section === */
    .hero {
      margin-top: clamp(40px, 10vh, 100px);
      margin-bottom: 40px;
      text-align: center;
      position: relative;
    }

    h1.title {
      margin: 0 0 16px 0;
      font-weight: 900;
      font-size: clamp(36px, 5vw, 64px);
      letter-spacing: -1px;
      background: linear-gradient(to bottom right, #fff 30%, #cbd5e1 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-shadow: 0 0 30px rgba(255,255,255,0.1);
    }

    .subtitle {
      margin: 0 auto 32px auto;
      color: var(--muted);
      font-size: clamp(16px, 2vw, 19px);
      max-width: 600px;
      line-height: 1.6;
    }

    .cta-row {
      display: flex;
      justify-content: center;
      gap: 16px;
      flex-wrap: wrap;
    }

    .cta {
      display: inline-flex; align-items: center; gap: 10px;
      text-decoration: none;
      padding: 14px 24px;
      border-radius: 50px;
      font-weight: 700;
      font-size: 15px;
      transition: var(--transition);
    }

    /* Primary Button */
    .cta.primary {
      background: var(--accent);
      color: #fff;
      box-shadow: 0 4px 20px var(--accent-glow);
      border: 1px solid rgba(255,255,255,0.1);
    }
    .cta.primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 30px var(--accent-glow);
    }

    /* Secondary Button */
    .cta.ghost {
      background: rgba(255,255,255,0.05);
      color: var(--ink);
      border: 1px solid var(--border);
    }
    .cta.ghost:hover {
      background: rgba(255,255,255,0.1);
      border-color: #fff;
    }

    /* === App Grid === */
    .apps {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 20px;
      padding-bottom: 60px;
    }

    .card {
      position: relative;
      display: flex; flex-direction: column; gap: 12px;
      text-decoration: none; color: var(--ink);
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 24px;
      transition: var(--transition);
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0,0,0,0.2);
    }

    /* Hover Effects */
    .card:hover {
      transform: translateY(-5px);
      background: var(--bg-card-hover);
      border-color: var(--border-hover);
      box-shadow: 0 20px 40px rgba(0,0,0,0.4);
    }
    .card:hover .badge {
      background: var(--accent);
      color: white;
      border-color: transparent;
      transform: scale(1.1) rotate(-5deg);
    }

    /* Focus State */
    .card:focus-visible {
      outline: 2px solid var(--accent);
      outline-offset: 2px;
    }

    /* Card Content */
    .row { display: flex; align-items: center; gap: 16px; margin-bottom: 4px; }
    
    .badge {
      display: grid; place-items: center;
      width: 48px; height: 48px;
      border-radius: 12px;
      background: rgba(255,255,255,0.07);
      border: 1px solid rgba(255,255,255,0.1);
      color: var(--ink);
      font-size: 20px;
      transition: var(--transition);
    }

    .name {
      font-weight: 700;
      font-size: 1.1rem;
      letter-spacing: 0.3px;
    }

    .hint {
      color: var(--muted);
      font-size: 0.95rem;
      line-height: 1.5;
    }

    /* Special Badges */
    .ext {
      position: absolute; top: 16px; right: 16px;
      color: var(--muted); opacity: 0.5;
      transition: var(--transition);
    }
    .card:hover .ext { opacity: 1; color: var(--accent); }

    .e2e-badge {
      position: absolute; top: 12px; right: 12px;
      background: rgba(34, 197, 94, 0.2);
      color: #4ade80;
      border: 1px solid rgba(34, 197, 94, 0.3);
      font-size: 10px; font-weight: 800;
      letter-spacing: 0.5px;
      padding: 4px 8px;
      border-radius: 6px;
      text-transform: uppercase;
    }

    /* Reduced Motion */
    @media (prefers-reduced-motion: reduce) {
      *, ::after, ::before { animation: none !important; transition: none !important; }
    }
    
    /* Mobile Adjustments */
    @media (max-width: 600px) {
      .hero { margin-top: 40px; }
      .apps { grid-template-columns: 1fr; }
    }
  </style>
</head>
<body>

  <div class="bg" aria-hidden="true">
    <video id="bgvid" playsinline muted loop autoplay>
      <source src="/bg-480.webm" type="video/webm"/>
    </video>
  </div>

  <div class="page">
    
    <section class="hero" aria-labelledby="title">
      <h1 id="title" class="title">Poke Apps</h1>
      <p class="subtitle">Youtube Front-end, translator, maps, notes, calendar, and moar! and they are cool as heck!!</p>
      
      <div class="cta-row">
        <a class="cta primary" href="/app">
          <i class="fa-regular fa-compass"></i> Discover!
        </a>
        <a class="cta ghost" href="#apps">
          <i class="fa-regular fa-grid-2"></i> Browse Apps
        </a>
      </div>
    </section>

    <nav id="apps" class="apps" aria-label="Apps">
      
      <a class="card" href="/game-hub" aria-label="Games">
        <div class="row">
          <span class="badge"><i class="fa-light fa-gamepad"></i></span>
          <span class="name">Games</span>
        </div>
        <span class="hint">Amazing games :3</span>
      </a>

      <a class="card" href="/translate" aria-label="Translate">
        <div class="row">
          <span class="badge"><i class="fa-light fa-language"></i></span>
          <span class="name">Translate</span>
        </div>
        <span class="hint">fast & accurate and free software translation!!</span>
      </a>

      <a class="card" href="/map" aria-label="Maps">
        <div class="row">
          <span class="badge"><i class="fa-light fa-map-location-dot"></i></span>
          <span class="name">Maps</span>
        </div>
        <span class="hint">A good map-view for web!</span>
      </a>

      <a class="card" href="https://social.poketube.fun" target="_blank" rel="noopener" aria-label="Fediverse">
        <span class="ext"><i class="fa-regular fa-arrow-up-right-from-square"></i></span>
        <div class="row">
          <span class="badge"><i class="fa-brands fa-mastodon"></i></span>
          <span class="name">Fediverse</span>
        </div>
        <span class="hint">Poke Social community</span>
      </a>

      <a class="card" href="/calendar" aria-label="Calendar">
        <div class="row">
          <span class="badge"><i class="fa-light fa-calendar"></i></span>
          <span class="name">Calendar</span>
        </div>
        <span class="hint">NO javascript!!! calendar :3</span>
      </a>

      <a class="card" href="/notepad" aria-label="Pokepad">
        <span class="e2e-badge">E2E</span>
        <div class="row">
          <span class="badge"><i class="fa-light fa-memo-pad"></i></span>
          <span class="name">Pokepad!</span>
        </div>
        <span class="hint">End-to-End Encrypted Feature rich web Notepad!</span>
      </a>

      <a class="card" href="/app" aria-label="Watch">
        <div class="row">
          <span class="badge"><i class="fa-light fa-play"></i></span>
          <span class="name">Watch</span>
        </div>
        <span class="hint">the biggest part of poke - the best-looking youtube front end ever!</span>
      </a>

      <a class="card" href="/settings" aria-label="Settings">
        <div class="row">
          <span class="badge"><i class="fa-light fa-gear"></i></span>
          <span class="name">Settings</span>
        </div>
        <span class="hint">settings lol idk wha to tell ya mate </span>
      </a>

    </nav>
  </div>

  <script>
    // Keyboard navigation logic
    (function(){
      const cards = Array.from(document.querySelectorAll('.card'));
      cards.forEach(c => c.tabIndex = 0);
      
      const getGridCols = () => {
        const grid = document.querySelector('.apps');
        if (!grid) return 1;
        const colWidth = 280; // Min-width from CSS
        const gap = 20;
        const available = grid.clientWidth;
        return Math.floor((available + gap) / (colWidth + gap)) || 1;
      };

      cards.forEach((el, idx) => {
        el.addEventListener('keydown', e => {
          const cols = getGridCols();
          let t = null;
          
          if(e.key === 'ArrowRight') t = (idx + 1) % cards.length;
          else if(e.key === 'ArrowLeft') t = (idx - 1 + cards.length) % cards.length;
          else if(e.key === 'ArrowDown') t = Math.min(cards.length - 1, idx + cols);
          else if(e.key === 'ArrowUp') t = Math.max(0, idx - cols);
          else if(e.key === 'Home') t = 0;
          else if(e.key === 'End') t = cards.length - 1;
          else if(e.key === 'Enter' || e.key === ' ') { 
            e.preventDefault(); el.click(); return; 
          }
          
          if(t !== null){ 
            e.preventDefault(); 
            cards[t].focus(); 
          }
        });
      });
    })();

    // Video handling for reduced motion/performance
    (function(){
      const v = document.getElementById('bgvid');
      if(!v) return;
      
      const reduce = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if(reduce){ 
        v.pause(); 
        v.removeAttribute('autoplay'); 
        v.currentTime = 0; 
      } else {
        // Ensure playback
        v.play().catch(() => {});
      }
    })();
  </script>
</body>
</html>