            <div class="stat"><h4>Precip prob (next hr)</h4><div><%= ssr.popNext ?? '‚Äî' %>%</div></div>
          </div>
        <% } else { %>
          <p style="color:var(--muted)">No data to show.</p>
        <% } %>
      </article>

