  border-color: #38bdf8;
}

.icon-btn {
  width: 44px;
  height: 44px;
  padding: 0;
  flex-shrink: 0;
}

.search .suggest {
  position: absolute;
  top: calc(100% + 4px);
  left: 0;
  width: 100%;
