.hour-item .time { font-size: 13px; font-weight: 600; color: var(--text-muted); }
.hour-item .icon { font-size: 20px; }
.hour-item .temp { font-size: 15px; font-weight: 700; }
.hour-item .pop { font-size: 11px; color: #38bdf8; font-weight: 600; min-height: 16px;}

.chart-container {
  margin-top: 16px;
  width: 100%;
  height: 100px;
  position: relative;
}
canvas#chart {
  width: 100%;
  height: 100%;
  filter: drop-shadow(0 2px 6px rgba(0,0,0,0.3));
