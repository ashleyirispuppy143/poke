  font-size: 13px;
  color: var(--text-dim);
  padding-top: 12px;
}
footer a { text-decoration: underline; text-decoration-color: rgba(255,255,255,0.2); }
footer a:hover { color: var(--text-main); }

/* Visibility States */
.ssr-block { display: none; }
#app-content { display: none; flex-direction: column; gap: 20px; }
#empty-state {
