.day-row:last-child { border-bottom: none; padding-bottom: 0; }

.day-row .icon { font-size: 20px; text-align: center; }
.day-row .desc { color: var(--text-muted); font-size: 14px; font-weight: 500; }
.day-row .hi { width: 40px; text-align: right; }
.day-row .lo { width: 40px; text-align: right; color: var(--text-dim); }

footer {
