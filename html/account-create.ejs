<% 
var alphabet = '0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz-_'.split('')
  , length = 64
  , map = {}
  , seed = 0
  , i = 0
  , prev;

/**
 * Return a string representing the specified number.
 *
 * @param {Number} num The number to convert.
 * @returns {String} The string representation of the number.
 * @api public
 */
function encode(num) {
  var encoded = '';

  do {
    encoded = alphabet[num % length] + encoded;
    num = Math.floor(num / length);
  } while (num > 0);

  return encoded;
}

/**
 * Return the integer value specified by the given string.
 *
 * @param {String} str The string to convert.
 * @returns {Number} The integer value represented by the string.
 * @api public
 */
function decode(str) {
  var decoded = 0;

  for (i = 0; i < str.length; i++) {
    decoded = decoded * length + map[str.charAt(i)];
  }

  return decoded;
}

/**
 * Yeast: A tiny growing id generator.
 *
 * @returns {String} A unique id.
 * @api public
 */
function yeast() {
  var now = encode(+new Date());

  if (now !== prev) return seed = 0, prev = now;
  return now +'.'+ encode(seed++);
}                          %>
  
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Redirecting…</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="color-scheme" content="dark light" />
  <meta name="theme-color" content="#000000" />
  <meta http-equiv="Content-Security-Policy" content="default-src 'self'; connect-src 'self' https://poketube.fun; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; base-uri 'self'; form-action 'self'">
  <style>
    :root { 
      --bg: #0b0b0b; 
      --surface: #141414; 
      --surface-border: #2a2a2a;
      --fg: #f3f3f3; 
      --muted: #a1a1a1; 
      --accent: #71c7ff; 
      --accent-hover: #5bb8f6;
      --danger: #ff6b6b;
    }
    html,body { margin:0; padding:0; height:100%; background:var(--bg); color:var(--fg); font:14px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, "Noto Sans", "Helvetica Neue", Arial, sans-serif; }
    .wrap { min-height:100%; display:grid; place-items:center; padding:24px; box-sizing: border-box; }
    .card { width:100%; max-width:480px; border:1px solid var(--surface-border); border-radius:16px; background:var(--surface); box-shadow:0 12px 40px rgba(0,0,0,0.6); overflow: hidden; }
    .inner { padding:32px 28px; }
    
    h1 { font-size:22px; margin:0 0 8px; font-weight: 600; letter-spacing: -0.02em; }
    p { margin:8px 0 0; color:var(--muted); font-size: 14px; }
    .row { display:flex; align-items:center; gap:12px; margin-top:16px; }
    .spinner { width:18px; height:18px; border-radius:50%; border:2px solid #333; border-top-color:var(--accent); animation:spin 0.8s linear infinite; }
    @keyframes spin { to { transform:rotate(360deg); } }
    
    .small { font-size:13px; color:var(--muted); line-height: 1.5; }
    .hidden { display:none !important; }
    a { color:var(--accent); text-decoration:none; transition: color 0.2s; }
    a:hover { color:var(--accent-hover); text-decoration:underline; }
    
    /* Forms & Inputs */
    .form-group { margin-top: 20px; }
    .form-group label { display: block; font-size: 14px; margin-bottom: 8px; color: var(--fg); font-weight: 500; }
    input[type="text"] { width: 100%; padding: 12px 14px; border: 1px solid #333; border-radius: 8px; background: #0a0a0a; color: var(--fg); font-family: inherit; font-size: 14px; box-sizing: border-box; transition: border-color 0.2s; }
    input[type="text"]:focus { outline: none; border-color: var(--accent); }
    input[type="text"]::placeholder { color: #555; }
    
    /* Buttons */
    button.btn { width: 100%; padding: 14px; margin-top: 24px; border: none; border-radius: 8px; background: var(--accent); color: #000; font-weight: 600; cursor: pointer; font-family: inherit; font-size: 15px; transition: background-color 0.2s, transform 0.1s; }
    button.btn:hover { background: var(--accent-hover); }
    button.btn:active { transform: scale(0.98); }
    
    button.btn-text { background: transparent; color: var(--muted); border: none; font-size: 13px; cursor: pointer; padding: 8px; width: auto; margin: 16px auto 0; display: block; text-decoration: underline; transition: color 0.2s; }
    button.btn-text:hover { color: var(--fg); }

    /* Captcha UI */
    .captcha-container { background: #0a0a0a; border: 1px solid #333; border-radius: 8px; overflow: hidden; margin-bottom: 12px; display: flex; flex-direction: column; }
    #captchaCanvas { width: 100%; height: 80px; display: block; }
    .captcha-toolbar { display: flex; justify-content: flex-end; padding: 6px 12px; background: #111; border-top: 1px solid #222; }
    .btn-refresh { background: none; border: none; color: var(--accent); font-size: 12px; cursor: pointer; display: flex; align-items: center; gap: 4px; padding: 4px; border-radius: 4px; transition: background 0.2s; }
    .btn-refresh:hover { background: rgba(113, 199, 255, 0.1); }
    
    /* Alerts */
    .error-msg { color: var(--danger); font-size: 13px; margin-top: 16px; display: none; padding: 12px; background: rgba(255, 107, 107, 0.08); border-radius: 8px; border: 1px solid rgba(255, 107, 107, 0.2); line-height: 1.4; }
    .disclaimer { margin-top: 24px; padding-top: 16px; border-top: 1px solid var(--surface-border); text-align: center; }

    /* Modal */
    .modal-overlay { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.8); backdrop-filter: blur(4px); display: flex; align-items: center; justify-content: center; z-index: 1000; opacity: 0; pointer-events: none; transition: opacity 0.2s ease; padding: 20px; }
    .modal-overlay.active { opacity: 1; pointer-events: all; }
    .modal-content { background: var(--surface); border: 1px solid var(--surface-border); border-radius: 16px; width: 100%; max-width: 400px; padding: 24px; box-shadow: 0 20px 50px rgba(0,0,0,0.8); transform: translateY(10px); transition: transform 0.2s ease; }
    .modal-overlay.active .modal-content { transform: translateY(0); }
    .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px; }
    .modal-header h2 { margin: 0; font-size: 18px; }
    .close-modal { background: none; border: none; color: var(--muted); font-size: 24px; cursor: pointer; line-height: 1; padding: 0; width: 32px; height: 32px; border-radius: 50%; display: grid; place-items: center; transition: background 0.2s, color 0.2s; }
    .close-modal:hover { background: #222; color: var(--fg); }
  </style>
</head>
<body>
  <noscript>
    <div class="wrap">
      <div class="card">
        <div class="inner">
          <h1>JavaScript required</h1>
          <p>This page assigns you a user ID and redirects to your account.</p>
          <p class="small">Enable JavaScript and refresh, or go to <a href="/my-acc">/my-acc</a> and sign in manually.</p>
        </div>
      </div>
    </div>
  </noscript>

  <div class="wrap" id="app">
    <div class="card">
      
      <div class="inner" id="loading-state">
        <h1>Preparing your account…</h1>
        <div class="row"><div class="spinner" aria-hidden="true"></div><p>Checking authorization securely.</p></div>
      </div>

      <div class="inner hidden" id="setup-state">
        <h1>Security Verification</h1>
        <p>Before generating your user ID, please solve the captcha and agree to our <a href="https://poketube.fun/policies/" target="_blank">policies</a>.</p>
        
        <div class="form-group">
          <label for="captchaInput">Enter the text shown in the image:</label>
          <div class="captcha-container">
            <canvas id="captchaCanvas" width="300" height="80" role="img" aria-label="Captcha image containing distorted letters and numbers. Click the refresh button below if it is unreadable."></canvas>
            <div class="captcha-toolbar">
              <button type="button" class="btn-refresh" onclick="generateCaptcha()" aria-label="Generate a new captcha image">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21.5 2v6h-6M21.34 15.57a10 10 0 1 1-.59-9.5l5.67 5.67"/></svg>
                Refresh Captcha
              </button>
            </div>
          </div>
          <input type="text" id="captchaInput" autocomplete="off" placeholder="Type captcha here (case-sensitive)..." required aria-required="true" />
        </div>

        <div class="form-group">
          <label for="agreeInput">Type <strong>AGREE</strong> to accept all policies, or <strong>DISAGREE</strong> to exit:</label>
          <input type="text" id="agreeInput" autocomplete="off" placeholder="AGREE or DISAGREE" required aria-required="true" />
        </div>

        <div class="error-msg" id="error-msg" role="alert"></div>

        <button class="btn" onclick="verifyAndProceed()">Verify & Create Account</button>
        
        <button class="btn-text" onclick="openLoginModal()">I already have an account</button>

        <div class="disclaimer">
          <p class="small">Poke is provided as is without warranty. <br><a href="/policies/privacy#warranty" target="_blank">Read Warranty Policy</a>.</p>
        </div>
      </div>

    </div>
  </div>

  <div class="modal-overlay" id="loginModal" role="dialog" aria-modal="true" aria-labelledby="modalTitle">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="modalTitle">Sign In</h2>
        <button class="close-modal" onclick="closeLoginModal()" aria-label="Close modal">&times;</button>
      </div>
      <p style="margin-top: 0; margin-bottom: 16px;">Enter your existing User ID to access your account.</p>
      <div class="form-group" style="margin-top: 0;">
        <label for="existingUserId">User ID:</label>
        <input type="text" id="existingUserId" placeholder="e.g. A1b2C3d4..." autocomplete="off" />
      </div>
      <button class="btn" onclick="loginExistingUser()">Sign In</button>
    </div>
  </div>

  <script>
    var apiurl = "https://poketube.fun/api";
    <% var userid = yeast() %>
    
    var currentUserId = localStorage.getItem("UserID");
    var currentCaptchaText = "";

    // Generate a hard, distorted canvas captcha
    function generateCaptcha() {
      const canvas = document.getElementById('captchaCanvas');
      const ctx = canvas.getContext('2d');
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      // Background noise
      ctx.fillStyle = '#111';
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      // Random characters (removed visually ambiguous ones like I, l, 1, O, 0)
      const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZabcdefghjkmnpqrstuvwxyz23456789';
      currentCaptchaText = '';
      for (let i = 0; i < 6; i++) {
        currentCaptchaText += chars.charAt(Math.floor(Math.random() * chars.length));
      }

      // Draw intersecting noise lines
      for (let i = 0; i < 15; i++) {
        ctx.strokeStyle = `rgba(${Math.random()*255},${Math.random()*255},${Math.random()*255},0.4)`;
        ctx.lineWidth = Math.random() * 2;
        ctx.beginPath();
        ctx.moveTo(Math.random() * canvas.width, Math.random() * canvas.height);
        ctx.lineTo(Math.random() * canvas.width, Math.random() * canvas.height);
        ctx.stroke();
      }

      // Draw text with random size, position, rotation, and color
      for (let i = 0; i < currentCaptchaText.length; i++) {
        ctx.save();
        const fontSize = 30 + Math.random() * 15;
        ctx.font = `bold ${fontSize}px sans-serif`;
        // Position text evenly across width but random heights
        ctx.translate(20 + (i * 45), 45 + (Math.random() * 15 - 7)); 
        // Random rotation
        ctx.rotate((Math.random() - 0.5) * 0.8);
        ctx.fillStyle = `hsl(${Math.random() * 360}, 70%, 65%)`;
        ctx.fillText(currentCaptchaText[i], 0, 0);
        ctx.restore();
      }

      // Add foreground noise dots
      for (let i = 0; i < 80; i++) {
        ctx.fillStyle = `rgba(255,255,255,0.2)`;
        ctx.beginPath();
        ctx.arc(Math.random() * canvas.width, Math.random() * canvas.height, Math.random() * 2, 0, 2 * Math.PI);
        ctx.fill();
      }
      
      // Clear input on refresh
      document.getElementById('captchaInput').value = '';
      document.getElementById('captchaInput').focus();
    }

    // Main execution
    if (currentUserId) {
      // User is already logged in, redirect normally
      location.href = "/my-acc?ID=" + currentUserId + "&rparam=1";
    } else {
      // User is not logged in, show captcha form
      document.getElementById('loading-state').classList.add('hidden');
      document.getElementById('setup-state').classList.remove('hidden');
      generateCaptcha();
    }

    // Validate form and proceed with original logic
    function verifyAndProceed() {
      var captchaInput = document.getElementById('captchaInput').value;
      var agreeInput = document.getElementById('agreeInput').value.trim().toUpperCase();
      var errorMsg = document.getElementById('error-msg');

      // Check for DISAGREE first
      if (agreeInput === 'DISAGREE') {
        window.location.href = '/';
        return;
      }

      // Verify Captcha and AGREE
      if (captchaInput !== currentCaptchaText) {
        showError('Incorrect captcha. Please try again.');
        generateCaptcha(); 
      } else if (agreeInput !== 'AGREE') {
        showError('You must type AGREE to accept the policies, or DISAGREE to exit.');
      } else {
        // Success verification
        errorMsg.style.display = 'none';
        
        // Execute the original assignment, DB set, and redirect
        localStorage.setItem('UserID', `<%- userid %>`);
        <% db.set(`user.${userid}`, userid) %>
        location.href = "/my-acc?ID=" + `<%- userid %>` + "&rparam=1";
      }
    }
    
    function showError(message) {
      var errorMsg = document.getElementById('error-msg');
      errorMsg.textContent = message;
      errorMsg.style.display = 'block';
    }

    // Modal Logic
    const modal = document.getElementById('loginModal');
    
    function openLoginModal() {
      modal.classList.add('active');
      document.getElementById('existingUserId').focus();
    }
    
    function closeLoginModal() {
      modal.classList.remove('active');
    }
    
    // Close modal on overlay click
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        closeLoginModal();
      }
    });

    function loginExistingUser() {
      var inputId = document.getElementById('existingUserId').value.trim();
      if (!inputId) {
        alert("Please enter a valid User ID.");
        return;
      }
      
      localStorage.setItem("UserID", inputId);
      location.href = "/my-acc?ID=" + inputId + "&rparam=1";
    }
  </script>
</body>
</html>