      font-stretch: ultra-expanded;
      font-weight: 1000;
      margin: 0px;
    }

    /* Split UI Layout */
    .split-layout {
      display: flex;
      height: 100vh;
      width: 100vw;
    }

     .branding-pane {
      flex: 1.8; 
      background: linear-gradient(135deg, #11050a 0%, #ffabbc 100%);  
      display: flex;
      flex-direction: column;
      justify-content: center;
